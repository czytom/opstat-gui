%html
 %head
  %title OpstatGui
  = stylesheet_link_tag    "application", :media => "all" 
  = javascript_include_tag "application"
  = csrf_meta_tags
%body
 %div.container
  %div.masthead
   %div{role: 'navigation',style: 'padding-top:10px'}
    %ul{:class => "nav nav-justified", :style => ' background-color: #eee;border: 1px solid #ccc;border-radius: 5px;'}
     %li{:class => "#{"active" if params[:controller] == 'hosts'}"}= link_to "Hosts",hosts_path, style: 'padding: 5px;'
     %li{:class => "#{"active" if params[:controller] == 'plugins'}"}= link_to "Plugins",plugins_path, style: 'padding: 5px;'
     %li= link_to "Profile", @user, style: 'padding: 5px;'
     %li= link_to "Logout", destroy_user_session_path, method: :delete, style: 'padding: 5px;'
 %div.container
  = yield

