<%- model_class = Plugin -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<% @plugins_hosts.sort.each do |ip,plugins|%>
<p> <%= ip %> </p>
    <% plugins.sort_by{|t| t.updated_at}.reverse.each do |plugin| %>
    <% if plugin.updated_at > Time.now - 7200 %>
      <%= link_to raw("<span class='label label-success'> #{plugin.plugin} (#{plugin.updated_at})"), :action => 'show', :id => plugin %>
    <% else %>
      <%= link_to raw("<span class='label label-warning'> #{plugin.plugin} (#{plugin.updated_at})"), :action => 'show', :id => plugin %>
    <% end %>
<%end%>
<% end %>
<% @plugins_hosts.sort.each do |ip,plugins|%>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:plugin) %></th>
      <th><%= model_class.human_attribute_name(:updated_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% plugins.sort_by{|t| t.updated_at}.reverse.each do |plugin| %>
      <tr>
        <td><%= link_to plugin.id, plugin_path(plugin) %></td>
        <td><%= plugin.plugin %></td>
        <td><%=l plugin.updated_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_plugin_path(plugin), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      plugin_path(plugin),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_plugin_path,
            :class => 'btn btn-primary' %>
