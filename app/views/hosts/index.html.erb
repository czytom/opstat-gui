<div class="page-header">
  <h1>Hosts' plugins</h1>
</div>
<div>
<table class="table table-striped table-condensed">
<% @hosts.sort_by{|h| h.hostname}.each do |host|%>
    <tr>
    <td> <span class='btn btn-info btn-mini'><%= link_to host.hostname, host %></span> </td>
    <td>
    <% host.plugins.sort_by{|t| t.type}.reverse.each do |plugin| %>
      <%= link_to plugin.type, host_plugin_path(host['_id'],plugin['_id']), class: 'btn btn-success btn-mini' %>
    <% end %>
    </td>
    </tr>
<% end %>
</table>
</div>

